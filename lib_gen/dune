;; generated detect.c

(library
 (name types)
 (libraries ctypes.stubs)
 (enabled_if
  (= %{system} macosx))
 (modules types))

(executable
 (name typegen)
 (enabled_if
  (= %{system} macosx))
 (libraries ctypes.stubs ctypes.foreign types)
 (modules typegen))

(rule
 (targets detect.c)
 (enabled_if
  (= %{system} macosx))
 (deps typegen.exe)
 (action
  (run %{deps})))

;; generate types_detected.ml

(rule
 (targets detect.exe)
 (enabled_if
  (= %{system} macosx))
 (deps detect.c)
 (action
  (run %{cc} -I %{ocaml_where} -I %{lib:ctypes:} -o %{targets} %{deps})))

(rule
 (targets types_detected.ml)
 (enabled_if
  (= %{system} macosx))
 (deps detect.exe)
 (action
  (with-stdout-to
   %{targets}
   (progn
    (echo "[@@@ warning \"-27-9\"]\n\n")
    (run %{deps})))))

;; generate cf_stubs.c and generated.ml

(executable
 (name bindgen)
 (enabled_if
  (= %{system} macosx))
 (libraries ctypes.stubs ctypes.foreign types)
 (modules bindgen bindings types_detected))

(rule
 (targets cf_stubs.c generated.ml)
 (enabled_if
  (= %{system} macosx))
 (deps bindgen.exe)
 (action
  (run %{deps})))
